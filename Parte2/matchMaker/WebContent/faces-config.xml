<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
	version="2.1">
	<application>
		<resource-bundle>
			<base-name>recursos.messages</base-name>
			<var>messages</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>recursos.css</base-name>
			<var>css</var>
		</resource-bundle>
	</application>
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>inicio</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>listagem</from-outcome>
			<to-view-id>/principal.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>usuario</from-outcome>
			<to-view-id>/usuario.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/usuario.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>sucesso</from-outcome>
			<to-view-id>/mostraUsuario.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>